<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner mb-3">
      <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center mb-2">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group" style="width: 75%">
            <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." aria-describedby="search-button" value="{{keywords}}" />
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </div>
      </form>

      <form action="/sort" method="GET">
        <select id="sort" class="form-control" name="sort" onchange="submit()">
          <option>排序</option>
          <option value="name_asc">A -> Z</option>
          <option value="name_desc">Z -> A</option>
          <option value="category_asc">類別</option>
          <option value="location_asc">地區</option>
        </select>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurantsData}}
    <div class="col-md-4 col-6 col-sm-7">
      <div class="card-columns">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
        </a>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>
          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>
          <span class="badge badge-pill badge-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
        <div class="card-footer d-flex justify-content-end flex-wrap">
          <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
          <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
          <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>